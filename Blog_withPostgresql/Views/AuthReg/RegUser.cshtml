@model Blog.BLL.ViewModels.UserRegViewModel

@{
    ViewData["Title"] = "Добавление пользователя";
}

@* <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>*@

<div id="mainDivReg" style="display: flex; justify-content: center; align-items: center; height: 80vh;">
    <div id="divReg">
        <div id="h1Div">
            <h1>Регистрация</h1>
        </div>
        <div id="registerFormDiv">
            <form method="post" asp-controller="AuthReg" asp-action="RegUser">

                <div>
                    <div id="labelDiv">
                        @Html.LabelFor(model => model.Name)
                    </div>
                    <div id="span_InputDiv">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div id="ageMainInputDiv" style="position:relative; display:inline-flex;">
                    <div id="labelDiv">
                        <label asp-for="Age"></label>
                    </div>
                    <div id="span_InputDiv">
                        <input type="number" asp-for="Age" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>

                <div id="emailMainInputDiv" style="position:relative; display:inline-flex;">
                    <div id="labelDiv">
                        <label asp-for="Email"></label>
                    </div>
                    <div id="span_InputDiv">
                        <input type="email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div id="passw_MainInputDiv" style="position:relative; display:inline-flex;">
                    <div id="labelDiv">
                        <label asp-for="Password"></label>
                    </div>
                    <div id="span_InputDiv">
                        <input type="password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div id="confirmpassw_MainInputDiv" style="position:relative; display:inline-flex;">
                    <div id="labelDiv">
                        <label asp-for="ConfirmPassword"></label>
                    </div>
                    <div id="span_InputDiv">
                        <input type="password" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <button type="submit">Зарегестрироваться</button>
            </form>
        </div>
    </div>
</div>
